<% if @event.users.nil? %>
<div class="event-show">
  Name:<%= @event.name %>
  Details:<%= @event.details %>
  Date:<%= @event.date %>
</div>
<% else %>
  Name: <%= @event.name %><br>
  Details:  <%= @event.details %><br>
  Date: <%= @event.date %>
<table style="width:80%" class= "manager-event-show-table">
  <tr>
    <th>Resident Name</th>
    <th>Resident Unit</th>
    <th>Resident Email</th>
    <th></th>
  </tr>
  <% @event.users.each do |user| %>
  <tr>
    <th><%= user.first_name %> <%= user.last_name %></th>
    <th><%= user.unit.unit_number %></th>
    <th><%= user.email %></th>
    <th><%= button_to "Remove Attendee", remove_event_path(@event), method: :delete, params: {user_id: user.id}, class: "remove-attendee-button"%>  </th>
  </tr>
  <% end %>
</table>
<% end %>

<div class="edit-details">
  <%= button_to "Manager Events Dashboard", manager_events_path, method: :get, class: "go-back-button-show"%>
</div>
